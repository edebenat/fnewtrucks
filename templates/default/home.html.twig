    </div>
</section>

<script>
    $(window).on('scroll', function(){
        var scroll1 = $("#homeVehicles").position().top - 300;
        if ($(this).scrollTop() > scroll1) {
            $('.homeVehiclesTitle').addClass('show');
            setTimeout(() => {
                $('.homeVehiclesSubtitle').addClass('show');
                $('.homeVehiclesStock').css('display', 'flex');
            }, 300);
            setTimeout(() => {
                $('.homeVehiclesStock').addClass('show');
            }, 600);
        }
    });
</script>
{% endblock %}
