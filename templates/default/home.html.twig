{% extends 'base.html.twig' %}

{% block title %}F New Trucks - Un vent Ford souffle par l'ouest...{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href={{asset("bundles/swiperjs/swiper-bundle.min.css")}}>
{% endblock %}

{% block javascripts %}
    <script src={{ asset('bundles/swiperjs/swiper-bundle.min.js') }}></script>
{% endblock %}

{% block body %}
<section class="homeTop">
    <img src={{ asset('images/home1.jpg') }} alt="Camions Ford">
    <div class="homeTopOverlay">
        <div class="homeTopWrapper">
            <h1>Un vent Ford<br>souffle par l'ouest...</h1>
            <div class="homeTopButtons">
                <a href="#" class="btn btnOrange"><span>Nos véhicules en stock</span><img src={{ asset('images/orange-arrow.png') }}></a>
                <a href="#" class="btn btnTransparent"><span>Découvrir Ford Trucks</span><img src={{ asset('images/orange-arrow.png') }}></a>
            </div>
        </div>
    </div>
</section>

<section class="fnt-cat-section">
    <div class="fnt-cat-wrapper">
        <h2>La gamme Ford Trucks</h2>
        <p>Une solution pour chaque besoin</p>
        <div class="fnt-categories">
            <a href="https://www.fordtrucks.com.tr/fr/routier" target="_blank">
                <img src={{asset("images/roadtruck2.png")}}>
                <span>Routier</span>
            </a>
            <a href="https://www.fordtrucks.com.tr/fr/tracteur" target="_blank">
                <img src={{asset("images/tractor2.png")}}>
                <span>Tracteur</span>
            </a>
            <a href="https://www.fordtrucks.com.tr/fr/construction" target="_blank">
                <img src={{asset("images/construction2.png")}}>
                <span>Construction</span>
            </a>
        </div>
    </div>
</section>

<section class="homeVehicles">
    <div class="homeVehiclesWrapper">
        <h2 class="homeVehiclesTitle">Nos véhicules prêts à partir</h2>
        <p class="homeVehiclesSubtitle">Découvrez nos poids lourds disponibles de suite.</p>
        <div class="homeVehiclesVehicles">
            {% for vehicle in vehicles %}
                <div class="homeVehiclesCard">
                    <div class="homeVehiclesImage">
                        {% if vehicle.images[0] is defined %}
                            <img src={{ vehicle.images[0] | imagine_filter('homeVehicle') }} alt="Véhicule Ford">                            
                        {% endif %}
                    </div>
                    <div class="homeVehiclesInfos">
                        <h2>{{ vehicle.model }}</h2>
                        <p>{{ vehicle.type }} | {{ vehicle.gears }} | {{ vehicle.enginePower }}<br>{{ vehicle.state }}{% if vehicle.mileageFromOdometer is not null %} | {{ vehicle.mileageFromOdometer }}{% endif %}</p>
                        <a href="#"><span>En savoir plus</span><img src={{ asset('images/orange-arrow.png') }}></a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="homeVehiclesButton">
            <a href="#" class="btn btnOrange"><span>Voir tous les véhicules en stock</span><img src={{ asset('images/orange-arrow.png') }}></a>
        </div>
    </div>
</section>

<section id="fnt-contact" class="fnt-contact">
    <div class="fnt-departements">
        <div class="fnt-col1">
            <h3>Départements 17, 79, 86</h3>
            <div class="fnt-av-commerce">
                <div class="fnt-av">
                    <h4>Après-vente</h4>
                    <h5>F NEW TRUCKS 79</h5>
                    <p>
                        Garage Jaulin<br>
                        11 avenue Charles de Gaulle<br>
                        79400 Saint-Maixent-l’École<br>
                        <a href="tel:+33549056504">05 49 05 65 04</a>
                    </p>
                    <img src={{asset("images/logo-jaulin.png")}} alt="Garage Jaulin" class="fnt-logo">
                </div>
                <div class="fnt-commerce">
                    <h4>Commerce</h4>
                    <h5>Boris VADELEAU</h5>
                    <p>
                        <a href="mailto:b.vadeleau@fnewtrucks.fr">b.vadeleau@fnewtrucks.fr</a>
                        <br>
                        <a href="tel:+33616334331">06 16 33 43 31</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="fnt-col2">
            <h3>Départements 16, 19, 23, 24, 87</h3>
            <div class="fnt-av-commerce">
                <div class="fnt-av">
                    <h4>Après-vente</h4>
                    <h5>F NEW TRUCKS 87</h5>
                    <p>
                        Garage C.E.A.P.L.<br>
                        10-12 route du Verdoyer<br>
                        87430 Verneuil-sur-Vienne<br>
                        <a href="tel:+33555480483">05 55 48 04 83</a>
                    </p>
                </div>
                <div class="fnt-commerce">
                    <h4>Commerce</h4>
                    <h5>Thomas TROUSSARD</h5>
                    <p>
                        <a href="mailto:t.troussard@fnewtrucks.fr">t.troussard@fnewtrucks.fr</a>
                        <br>
                        <a href="tel:+33679813600">06 79 81 36 00</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const swiper = new Swiper('.swiper', {
        // Optional parameters
        direction: 'horizontal',
        loop: true,
        autoHeight: true,

        // If we need pagination
        pagination: {
            el: '.swiper-pagination',
        },

        // Navigation arrows
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    });
</script>

{% endblock %}
